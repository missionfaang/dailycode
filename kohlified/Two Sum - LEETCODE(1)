class Solution {
    public int[] twoSum(int[] nums, int target) {
        int x,y;
        for(int i=0;i<nums.length;i++)
        {
            x = nums[i];
            for(int j=i+1;j<nums.length;j++)
            {
                 y = x+nums[j];
                if(y==target)
                {
					        return new int[]{i,j};
                }
            }
        }
		// If no sum matches with target value
         throw new IllegalArgumentException("No solution");
    }
    } 
    
    
    
